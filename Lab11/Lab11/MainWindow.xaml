<Window x:Class="Lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drum Machine MVP" Height="500" Width="1000" Background="#2D2D30">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox Name="ComboKits" Width="180" Height="30" FontSize="14" SelectionChanged="ComboKits_SelectionChanged"/>
            <TextBlock Text="Steps:" Foreground="White" VerticalAlignment="Center" Margin="15,0,5,0"/>
            <ComboBox Name="ComboSteps" Width="60" Height="30" SelectionChanged="ComboSteps_SelectionChanged">
                <ComboBoxItem Content="16" IsSelected="True"/>
                <ComboBoxItem Content="32"/>
                <ComboBoxItem Content="64"/>
            </ComboBox>
            <Button Name="BtnPlay" Content="PLAY" Width="80" Height="30" Margin="20,0,0,0" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="BtnPlay_Click"/>
            <Button Name="BtnStop" Content="STOP" Width="80" Height="30" Margin="10,0,0,0" Background="#3E3E42" Foreground="White" FontWeight="Bold" Click="BtnStop_Click"/>
            <Button Name="BtnExport" Content="MP3" Width="60" Height="30" Margin="10,0,0,0" Background="MediumSeaGreen" Foreground="White" FontWeight="Bold" Click="BtnExport_Click"/>
            <TextBlock Text="BPM:" Foreground="White" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <Slider Name="SliderBpm" Minimum="60" Maximum="200" Value="120" Width="120" VerticalAlignment="Center" ValueChanged="SliderBpm_ValueChanged"/>
            <TextBlock Name="TxtBpm" Text="120" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock Name="TxtStatus" Text="Ready" Foreground="LightGray" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Name="TracksPanel" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</Window>